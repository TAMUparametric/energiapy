{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Radon: Cyclomatic Complexity",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "radon",
                "cc",
                "src",
                "-s",
                "-a"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Radon: Maintainability Index",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "radon",
                "mi",
                "src",
                "-s"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Radon: Raw Metrics",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "radon",
                "raw",
                "src"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run coverage",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest",
                "--cov=src",
                "--cov-report=term-missing"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}