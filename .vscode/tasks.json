{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Radon: Cyclomatic Complexity",
            "type": "shell",
            "command": "radon cc src -s -a",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true
            }
        },
        {
            "label": "Radon: Maintainability Index",
            "type": "shell",
            "command": "radon mi src -s",
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Radon: Raw Metrics",
            "type": "shell",
            "command": "radon raw src",
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Run coverage",
            "type": "shell",
            "command": "pytest",
            "args": [
                "--cov=src", // or your package name
                "--cov-report=term-missing"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}